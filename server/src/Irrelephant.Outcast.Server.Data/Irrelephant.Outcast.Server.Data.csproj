<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <PackageId>Irrelephant.Outcast.Server.Data</PackageId>
        <RootNamespace>Irrelephant.Outcast.Server.Data</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Entities\entities.0.json" />
      <Content Include="Entities\entities.0.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="Entities\Archetypes\mobs.0.json" />
      <Content Include="Entities\Archetypes\mobs.0.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
